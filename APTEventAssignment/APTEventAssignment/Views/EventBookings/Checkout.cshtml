@model APTEventAssignment.Models.EventBooking

@{
    ViewBag.Title = "Checkout";
}


<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        @using (Html.BeginForm())
        {
            <h4>Ticket Details</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <h6>Thank You for buying your tickets with us... an email and SMS will be sent to the details you sent us </h6>
                </div>
            </div>
            <div class="row row-space"></div>
            <div class="form-group">
                <div class="col-md-offset-5 col-md-12">
                    <input type='button' class="btn btn-primary" value='Proceed to Events' onclick='window.location = "@Url.Action("Index", "Home")#portfolio";' />
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
